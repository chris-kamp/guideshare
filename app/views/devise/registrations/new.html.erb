<div class="container">
  <h2>Sign up</h2>
  <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), wrapper: :horizontal_form) do |f| %>
    <%= f.error_notification %>
    <div class="form-inputs">
      <%= f.input :email,
                  required: true,
                  autofocus: true,
                  input_html: { autocomplete: "email" }, wrapper_html: {class: "mt-5 mb-5"}%>
      <%# Added username field to signup form %>
      <%= f.input :username,
                  required: true, wrapper_html: {class: "mt-5 mb-5"} %>
      <%= f.input :password,
                  required: true,
                  hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length),
                  input_html: { autocomplete: "new-password" }, wrapper_html: {class: "mt-5 mb-5"} %>
      <%= f.input :password_confirmation,
                  required: true,
                  input_html: { autocomplete: "new-password" }, wrapper_html: {class: "mt-5 mb-5"} %>
      
      <%# Include hidden field for shopping cart, to allow user's shopping cart to be generated from strong params in #create %>
      <%= f.simple_fields_for :cart do |c| %>
        <%= c.input :user_id, as: :hidden %>
      <% end %>

    </div>
    <div class="form-actions">
      <%= f.button :submit, "Sign up", class: "btn-primary mb-3" %>
    </div>
  <% end %>
  <%= render "devise/shared/links" %>
</div>
